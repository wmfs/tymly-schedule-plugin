{
  "templateMeta": {
    "name": "view-scheduled-task",
    "title": "View Scheduled State Machine",
    "category": "schedule"
  },
  "type": "AdaptiveCard",
  "body": [
    {
      "type": "Container",
      "color": "accent",
      "spacing": "none",
      "items": [
        {
          "type": "TextBlock",
          "text": "{{ data.key }}",
          "weight": "bolder",
          "spacing": "none"
        }
      ]
    },
    {
      "type": "ColumnSet",
      "columns": [
        {
          "type": "Column",
          "width": 8,
          "items": [
            {
              "type": "FactSet",
              "showAllIfUndefined": true,
              "facts": [
                {
                  "title": "Key",
                  "value": "{{ data.key }}"
                },
                {
                  "title": "Schedule",
                  "value": "{{ data.scheduleType === 'datetime' ? data.datetime : data.interval }}"
                },
                {
                  "title": "State machine name",
                  "value": "{{ data.stateMachineName }}"
                },
                {
                  "title": "Input",
                  "value": "{{ JSON.stringify(data.input) }}"
                },
                {
                  "title": "Send response",
                  "value": "{{ data.sendResponse }}"
                },
                {
                  "title": "Start on boot?",
                  "value": "{{ data.startOnBoot ? 'Yes' : 'No' }}"
                },
                {
                  "title": "Status",
                  "value": "{{ data.status }}"
                },
                {
                  "title": "Created",
                  "value": "{{ formatDate(data.created, 'DD/MM/YYYY HH:mm') }}"
                },
                {
                  "title": "Created by",
                  "value": "{{ data.createdBy || '-' }}"
                },
                {
                  "title": "Modified",
                  "value": "{{ formatDate(data.modified, 'DD/MM/YYYY HH:mm') }}"
                },
                {
                  "title": "Modified by",
                  "value": "{{ data.modifiedBy || '-' }}"
                }
              ]
            }
          ]
        },
        {
          "type": "Column",
          "width": 4,
          "items": [
            {
              "type": "ActionSet",
              "actions": [
                {
                  "showWhen": "data.status === 'STARTED'",
                  "type": "Action.PushCard",
                  "title": "Stop task",
                  "stateMachineName": "schedule_stopTask_1_0",
                  "input": {
                    "key": "$.key"
                  }
                },
                {
                  "showWhen": "data.status === 'STOPPED'",
                  "type": "Action.PushCard",
                  "title": "Start task",
                  "stateMachineName": "schedule_startTask_1_0",
                  "input": {
                    "key": "$.key"
                  }
                },
                {
                  "type": "Action.PushCard",
                  "title": "Update schedule",
                  "stateMachineName": "schedule_updateScheduledTask_1_0",
                  "input": {
                    "key": "$.key"
                  }
                },
                {
                  "type": "Action.PushCard",
                  "title": "Update state machine config",
                  "stateMachineName": "schedule_updateStateMachineConfig_1_0",
                  "input": {
                    "key": "$.key"
                  }
                }
              ]
            }
          ]
        }
      ]
    },
    {
      "title": "State machine executions",
      "type": "Table",
      "arrayPath": "data.executions",
      "columns": [
        {
          "title": "Execution name",
          "field": "executionName"
        },
        {
          "title": "Status",
          "field": "status"
        },
        {
          "title": "Created",
          "field": "created",
          "format": "formatDate(val, 'DD/MM/YYYY HH:mm')"
        },
        {
          "title": "Modified",
          "field": "modified",
          "format": "formatDate(val, 'DD/MM/YYYY HH:mm')"
        }
      ]
    }
  ],
  "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
  "version": "1.0"
}

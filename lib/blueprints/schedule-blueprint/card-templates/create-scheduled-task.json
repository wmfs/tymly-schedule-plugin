{
  "templateMeta": {
    "name": "create-scheduled-task",
    "title": "Configure a Scheduled State Machine",
    "category": "schedule"
  },
  "hooks": {
    "afterSubmit": {
      "actions": [
        {
          "type": "Action.PushCard",
          "stateMachineName": "schedule_viewScheduledTask_1_0",
          "input": {
            "key": "$.key"
          }
        }
      ]
    }
  },
  "type": "AdaptiveCard",
  "body": [
    {
      "showWhen": "data.editing !== true",
      "id": "name",
      "type": "Input.Text",
      "title": "Schedule name",
      "validation": {
        "requiredIf": "data.editing !== true"
      }
    },
    {
      "id": "scheduleType",
      "type": "Input.ChoiceSet",
      "title": "What type of schedule?",
      "choices": [
        {
          "title": "Interval",
          "value": "interval"
        },
        {
          "title": "Date/time",
          "value": "datetime"
        }
      ],
      "validation": {
        "required": true
      }
    },
    {
      "showWhen": "data.scheduleType === 'interval'",
      "id": "interval",
      "type": "Input.Text",
      "title": "Interval",
      "validation": {
        "requiredIf": "data.scheduleType === 'interval'"
      }
    },
    {
      "showWhen": "data.scheduleType === 'datetime'",
      "id": "datetime",
      "type": "Input.DateTime",
      "title": "Date/time",
      "validation": {
        "requiredIf": "data.scheduleType === 'datetime'"
      }
    },
    {
      "id": "stateMachineName",
      "type": "Input.ChoiceSet",
      "title": "Which state machine?",
      "filter": true,
      "choicesPath": "data.availableStateMachines",
      "validation": {
        "required": true
      }
    },
    {
      "id": "inputStr",
      "type": "Input.Text",
      "title": "Input",
      "isMultiline": true,
      "value": "{}"
    }
  ],
  "actions": [
    {
      "type": "Action.Cancel",
      "title": "Cancel"
    },
    {
      "type": "Action.Submit",
      "title": "Submit"
    }
  ],
  "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
  "version": "1.0"
}

{
  "templateMeta": {
    "name": "update-scheduled-task",
    "title": "Update Scheduled State Machine",
    "category": "schedule"
  },
  "hooks": {
    "afterSubmit": {
      "actions": [
        {
          "type": "Action.PushCard",
          "stateMachineName": "schedule_viewScheduledTask_1_0",
          "input": {
            "key": "$.key"
          }
        }
      ]
    }
  },
  "type": "AdaptiveCard",
  "body": [
    {
      "type": "Container",
      "color": "accent",
      "spacing": "none",
      "items": [
        {
          "type": "TextBlock",
          "text": "{{ data.key }}",
          "weight": "bolder",
          "spacing": "none"
        }
      ]
    },
    {
      "id": "stateMachineName",
      "type": "Input.ChoiceSet",
      "title": "Which state machine?",
      "filter": true,
      "choicesPath": "data.availableStateMachines",
      "validation": {
        "required": true
      }
    },
    {
      "id": "inputStr",
      "type": "Input.Text",
      "title": "Input",
      "isMultiline": true,
      "value": "{}"
    }
  ],
  "actions": [
    {
      "type": "Action.Cancel",
      "title": "Cancel"
    },
    {
      "type": "Action.Submit",
      "title": "Submit"
    }
  ],
  "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
  "version": "1.0"
}
